@page
@model ActividadEvaluableUT8RazorPages.Pages.Creatures.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Creature</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Creature.creature_id" />
            <div class="form-group">
                <label asp-for="Creature.name" class="control-label"></label>
                <input asp-for="Creature.name" class="form-control" />
                <span asp-validation-for="Creature.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Creature.description" class="control-label"></label>
                <input asp-for="Creature.description" class="form-control" />
                <span asp-validation-for="Creature.description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Creature.logia_id" class="control-label"></label>
                <select asp-for="Creature.logia_id" class="form-control" asp-items="ViewBag.logia_id"></select>
                <span asp-validation-for="Creature.logia_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
